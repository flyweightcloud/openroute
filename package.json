{
  "name": "@flyweight.cloud/openroute",
  "version": "0.1.0",
  "description": "A tiny zero runtime dependency router for Azure Functions with Swagger integration",
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf lib && tsc",
    "lint": "tslint src/**/*.ts tests/**/*.ts -e \"tests/DemoFunc/node_modules/**/*\" ",
    "lint:fix": "tslint src/**/*.ts tests/**/*.ts -e \"tests/DemoFunc/node_modules/**/*\" --fix",
    "test": "jest --config jestconfig.json",
    "deploy": "npm run lint && npm run build && npm publish"
  },
  "author": "Mark Percival <m@mdp.im>",
  "license": "MIT",
  "dependencies": {
    "@azure/functions": "^1.2.3",
    "@types/node": "^16.10.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  }
}
